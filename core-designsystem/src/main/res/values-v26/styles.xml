<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Typography -->
    <style name="Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/suit_bold</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/suit_semibold</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/suit_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="Bold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Bold.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bold.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Bold.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SemiBold.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SemiBold.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SemiBold.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Regular.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular.12">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- TextView -->
    <style name="TextView.Heading1" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Bold.24</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextView.Heading2" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Bold.20</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="TextView.Heading3" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Bold.18</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>

    <style name="TextView.Subtitle1" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/SemiBold.18</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>

    <style name="TextView.Subtitle2" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/SemiBold.16</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextView.Subtitle3" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/SemiBold.14</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TextView.Body1" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Regular.16</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextView.Body2" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Regular.14</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TextView.Caption1" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Bold.12</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextView.Caption2" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Regular.12</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

</resources>
